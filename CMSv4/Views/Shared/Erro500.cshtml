@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Erro500";
    Layout = "~/Areas/CMS/Views/Shared/_MasterInternas.cshtml";
    var tradutor = new BLTraducao();
}

<div class="row">
    <div class="col-lg-6 col-lg-offset-3" style="margin-left:20%;">
        <h1 class="error-title">500</h1>
        <h4 class="error-msg"><i class="fa fa-warning text-red"></i> Internal Server Error</h4>
        <p class="lead">@tradutor.ObterAdm("O servidor encontrou uma condição inesperada que impediu que ele atendesse sua solicitação. Por favor, tente novamente ou entre em contato com a equipe de suporte.")</p>
        <ul class="list-unstyled">
            <li>
                <a class="btn btn-default" id="btnVisualizarLog" href="javascript:void(0)">@tradutor.ObterAdm("Ver log de erro")</a>
            </li>
        </ul>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnVisualizarLog").click(function () {
                $('a[data-url="/admin/logerro"]', window.parent.document).click();
            });
        });
    </script>
}
