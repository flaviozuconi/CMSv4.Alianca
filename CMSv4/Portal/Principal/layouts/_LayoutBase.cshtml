<script src="@Url.Content(baseUrl + "js/custom-functions.js")"></script><!-- Chama funções globais do site -->
<script src="@Url.Content(baseUrl + "js/main.js")"></script><!-- Chamadas gerais de JS -->


 @RenderSection("scripts", false)
</body>
</html>
