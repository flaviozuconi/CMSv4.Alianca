<!-- mol-header -->
<header class="header">
@{
    var portal = BLPortal.Atual;
    @RenderSection("body", false
}

   
      <!-- menu portugues -->
      <div class="main-header hide-on-mobile">
          <h1 class="brand-header">
          <a href="@Portal.UrlDiretorio(portal)">Braskem</a>
          </h1>
          <span class="icon icon-menu"></span>
          <div class="collapse navbar-collapse hide-on-mobile" id="main-menu-collapse">
            <div class="recipiente">
              <!-- menu superior -->
              @try
              {
                  @Html.Action("ListarPublico", "ModuloMenu", new { model = new MLModuloMenuModulo() { CodigoMenu = 1, View="Horizontal", ClasseCSS="nav nav-header" } })
              }
              catch (Exception ex)
              {
                  ApplicationLog.ErrorLog(ex);
              }
              <!-- /menu superior -->
              </div>
          </div>
          <ul class="nav nav-header">
              <li class="dropdown languages">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="icon icon-globe"></span>Português</a>
                  <div class="dropdown-menu" role="menu">
                    
                    @try
                    {
                        @Html.Action("Index", "Idioma", new { view = "Principal"  })
                    }
                    catch (Exception ex)
                    {
                        ApplicationLog.ErrorLog(ex);
                    }
                    
                    <ul class="portal-list">
                      <li class="title">Sites Globais</li>
                      <!-- <li><a href="@Portal.UrlDiretorio(portal)/home">Brasil</a></li> -->
                      <li><a href="http://www.braskem.com.br/usa">United States</a></li>
                      <li><a href="http://www.braskemidesa.com.mx">Mexico</a></li>
                      <li><a href="http://www.braskem.com.br/europe">Europe</a></li>
                    </ul>
                  </div>
              </li>
          </ul>
          @try
          {
              @Html.Action("ListarPublico", "ModuloAvisos")
          }
          catch (Exception ex)
          {
              ApplicationLog.ErrorLog(ex);
          }
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-menu-mobile">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
          </button>
          <!-- /menu superior -->
          <!-- busca -->
          <div class="search-header" role="search">

                @try
                {
                    @Html.Action("FormularioPesquisa", "Busca")
                }
                catch (Exception ex)
                {
                    ApplicationLog.ErrorLog(ex);
                }

          </div>
          <!-- busca -->
      </div>
      <!-- menu principal -->
      try
      {
          @Html.Action("ListarPublico", "ModuloMenu", new { model = new MLModuloMenuModulo() { CodigoMenu = 2, View="TopoSingleCol", ClasseCSS="navbar main-menu hide-on-mobile" } })
      }
      catch (Exception ex)
      {
          ApplicationLog.ErrorLog(ex);
      }
      <!-- /menu principal -->
      <!-- menu mobile -->
      <div class="menu-mobile">
        <h1 class="brand-header"><a href="@Portal.UrlDiretorio(portal)">Braskem</a></h1>
        <ul class="menu-mobile--calls list-unstyled">
          <li class="languages" data-subcall="sub-languages">
            <span class="dropdown-toggle" role="button" aria-label="true" aria-expanded="false"><span class="icon icon-globe-noborder"></span> PT-BR</span>
          </li>
          <li class="message-box" data-subcall="sub-messages">
            <span class="box">
                  <i></i>
                <span class="icon icon-chat" aria-hidden="true"></span>
            </span>
          </li>
          <li class="search-mobile" data-subcall="sub-search">
            <span class="icon icon-search"></span>
          </li>
          <li class="submenu-mobile" data-toggle="offcanvas">
            <span class="icon icon-menu"></span>
          </li>
        </ul>
        <div class="sub-menu">
          <div class="sub-languages" data-subtarget="sub-languages">
            <div class="dropdown-menu" role="menu">
                    
              @try
              {
                  @Html.Action("Index", "Idioma", new { view = "Principal"  })
              }
              catch (Exception ex)
              {
                  ApplicationLog.ErrorLog(ex);
              }
              
              <ul class="portal-list">
                <li class="title">Sites Globais</li>
                <!-- <li><a href="@Portal.UrlDiretorio(portal)/home">Brasil</a></li> -->
                <li><a href="http://www.braskem.com.br/usa">United States</a></li>
                <li><a href="http://www.braskemidesa.com.mx">Mexico</a></li>
                <li><a href="http://www.braskem.com.br/europe">Europe</a></li>
              </ul>
            </div>
          </div>
          <div class="sub-messages" data-subtarget="sub-messages">
            <div class="dropdown-menu message-box--list" aria-labelledby="new-messages">
              <h3>Feed de Notícias <em>Braskem</em></h3>
            </div>
          </div>
          <div class="sub-search" data-subtarget="sub-search">
            @try
            {
                @Html.Action("FormularioPesquisa", "Busca")
            }
            catch (Exception ex)
            {
                ApplicationLog.ErrorLog(ex);
            }
          </div>
          <div class="sub-menu-o sidebar-offcanvas">
            <!-- main menu mobile -->
            @try
            {
                @Html.Action("ListarPublico", "ModuloMenu", new { model = new MLModuloMenuModulo() { CodigoMenu = 2, View="TopMobileLateral"} })
            }
            catch (Exception ex)
            {
                ApplicationLog.ErrorLog(ex);
            }
            <!-- /main menu mobile -->
            <!-- menu superior mobile -->
            @try
            {
                @Html.Action("ListarPublico", "ModuloMenu", new { model = new MLModuloMenuModulo() { CodigoMenu = 1, View="Horizontal", ClasseCSS="menu-institucional list-unstyled" } })
            }
            catch (Exception ex)
            {
                ApplicationLog.ErrorLog(ex);
            }
            <!-- /menu superior mobile -->
          </div>
        </div>
      </div>
      <!-- /menu mobile -->
      <!-- /menu portugues -->




</header>
<!-- /mol-header -->
<main role="main">
        @RenderBody()
</main>
<!-- mol-footer -->
<footer class="footer">
      <!-- footer pt -->
      <nav class="nav-footer">
        <div class="container">
          @try
          {
              @Html.Action("ListarPublico", "ModuloMenu", new { model = new MLModuloMenuModulo() { CodigoMenu = 20, View="Horizontal", ClasseCSS="list-unstyled list-inline" } })
          }
          catch (Exception ex)
          {
              ApplicationLog.ErrorLog(ex);
          }
          <div class="gotop">
            <span class="icon icon-chevron-up" aria-hidden="true"></span>
            <span class="title">
                TOPO
            </span>
          </div>
        </div>
      </nav>
      <div class="nav-footer-max">
        <div class="container">
            <div class="row">
                <div class="col-xs-24 col-sm-19 col-md-19">
                    @try
                    {
                        @Html.Action("ListarPublico", "ModuloMenu", new { model = new MLModuloMenuModulo() { CodigoMenu = 2, View="FooterSingleCol", ClasseCSS="menu-main row list-unstyled" } })
                    }
                    catch (Exception ex)
                    {
                        ApplicationLog.ErrorLog(ex);
                    }
                </div>
                <div class="col-xs-24 col-sm-5 col-md-5">
                    <h4 class="section-title">Braskem na rede</h4>
                    <p>Confira o que estamos postando na rede.</p>
                    <ul class="social-media list-unstyled list-inline">
                        <li><a href="https://www.facebook.com/BraskemSA" class="icon icon-facebook" title="Facebook" target="_blank"></a></li>
                          <li><a href="https://twitter.com/BraskemSA" class="icon icon-twitter" title="Twitter" target="_blank"></a></li>
                          <li><a href="https://www.linkedin.com/company/braskem" class="icon icon-linkedin" title="LinkedIn" target="_blank"></a></li>
                        <li><a href="https://plus.google.com/u/0/106003173637402418615/posts" class="icon icon-gplus" title="Google+" target="_blank"></a></li>
                          <li><a href="https://instagram.com/braskemsa/" class="icon icon-instagram" title="Instagram" target="_blank"></a></li>
                    </ul>
                    <ul class="more-braskem list-unstyled">
                      <li><a href="@Portal.UrlDiretorio(portal)/Carreira">Carreira</a></li>
                      <li><a href="@Portal.UrlDiretorio(portal)/comunicacao">Comunicação</a></li>
                      <li><a href="@Portal.UrlDiretorio(portal)/Contato">Contato</a></li>
                    </ul>
                </div>
            </div>
        </div>
      </div>
      <div class="copy">
          <ul class="list-inline">
              <li>Copyright &copy; 2016 - Braskem</li>
              <li>
                  <a href="@Portal.UrlDiretorio(portal)/termos-de-uso">Termos de Uso</a>
              </li>
              <li>
                  <a href="@Portal.UrlDiretorio(portal)/politica-de-privicidade">Política de Privacidade</a>
              </li>
          </ul>
          <a href="" class="vm2" title="Agência VM2">
              <span class="icon icon-vm2"></span>
              <span class="sr-only">Agência VM2</span>
          </a>
      </div>
      <!-- /footer pt -->
    

</footer>
<!-- /mol-footer -->

