@model List<MLEventoPublico>
@{
    var portal = BLPortal.Atual;
}
@if (Model.Count > 0)
{
    foreach (var item in Model)
    {
        <!-- mol-event-box -->
        <div class="col-sm-12">
            <div class="event-box">
                <div class="event--date">
                    <span>@(String.Format("{0:dd}", item.DataInicio))</span> @(String.Format("{0:MMM}", item.DataInicio)) @T("de") @(item.DataInicio.Value.Year.ToString())
                </div>
                <div class="event--desc">
                    <a href="@item.Url">
                        <h3 class="event--title">@item.Titulo</h3>
                        <p class="event--cap">@item.Chamada</p>
                        <time datetime="@item.DataInicio.Value.ToString("yyyy-MM-dd")" class="event--datetime">
                            <span class="glyphicon glyphicon-calendar"></span>
                            @(String.Format("{0:dd}", item.DataInicio)) @T("de") @(String.Format("{0:MMMM}", item.DataInicio)) / @(item.DataInicio.Value.ToString("yy"))
                        </time>
                    </a>
                    <a href="@string.Format("{0}/Evento/Agenda/{1}", Portal.UrlCms(portal), item.Codigo)" class="hide-on-mobile">
                        <span class="btn btn-default">@T("Exportar para Outlook")</span>
                    </a>
                </div>
            </div>
        </div>
        <!-- /mol-event-box -->
    }
    <input type="hidden" id="url" value="@ViewBag.url" />
}
else
{
    @T("Não existem eventos para o filtro selecionado.")
}