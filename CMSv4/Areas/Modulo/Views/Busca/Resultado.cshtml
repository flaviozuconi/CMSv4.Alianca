@model List<MLBuscaResultado>
@{
    ViewBag.Title = "Resultado";

}

<ul class="result--list">
    @if (Model.Count > 0)
    {

        foreach (var item in Model)
        {
            var link = item.Tipo == "ARQ" ? BLExtentionMethod.Unescape(item.Url) : Portal.ResolveUrl(item.Url, BLPortal.Atual);
            <li class="result--item">
                <a href="@link">
                    <h3 class="result--title">@item.Titulo</h3>
                    @if (!string.IsNullOrEmpty(item.Chamada))
                    {
                        <p>@Html.Raw(item.Chamada.Unescape())</p>
                    }
                </a>
            </li>
        }
    }
    else
    {
        <li class="result--item">
            <h3 class="result--title">@T("Nenhum resultado encontrado para o Termo.")</h3>
        </li>
    }
</ul>
