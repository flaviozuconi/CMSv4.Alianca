@model Dictionary<string, string>

@{
    var portal = BLPortal.Atual;

    
}

<ul class="list-inline language-list jq-teste">
    <li class="title">@T("IDIOMAS")</li>

    @foreach (var item in Model)
    {
        switch (item.Key)
        {
            case "pt-BR": 
                <li><a href="@Portal.ResolveUrl(item.Value, portal)@(Request.Url.Query)">@T("Português")</a></li>
                break;

            case "en-US":
                <li><a href="@Portal.ResolveUrl(item.Value, portal)@(Request.Url.Query)">@T("Inglês")</a></li>
                break;

            case "es-MX":
                <li><a href="@Portal.ResolveUrl(item.Value, portal)@(Request.Url.Query)">@T("Espanhol")</a></li>
                break;
        }
    }
</ul>