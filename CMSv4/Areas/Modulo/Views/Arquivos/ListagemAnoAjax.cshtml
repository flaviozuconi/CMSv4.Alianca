@model List<MLArquivoPublico>
@if (Model.Count > 0)
{
    var catAnterior = string.Empty;

    foreach (var item in Model)
    {
        if (!catAnterior.Equals(item.NomeCategoria, StringComparison.InvariantCultureIgnoreCase))
        {
            catAnterior = item.NomeCategoria;
            <h2>@item.NomeCategoria</h2>
        }

        <div class="row">
            <a href="@item.EnderecoDownload()">
                <span class='data'>@item.Data.Value.ToString(BLTraducao.T("dd/MM/yyyy"))</span>&nbsp;&nbsp;&nbsp;<span class='titulo'>
                    <strong>@item.Titulo</strong>
                </span>
            </a>
            <hr />
        </div>
    }
    <div>
        <a href="#topo">@T("Voltar ao Topo")</a>
    </div>
}
else
{
    <p>@T("Nenhum registro encontrado")</p>
}