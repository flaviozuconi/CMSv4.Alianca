@model MLClienteAlterarSenha
<div class="modal modal-flex fade" id="divAlterarSenha" tabindex="-1" role="dialog" aria-labelledby="flexModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="formAlterarSenha" action="@(Portal.UrlCms(BLPortal.Atual) + "/ModuloLogin/AlterarSenha")" method="post" class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">@T("Alterar Senha")</h4>
                </div>
                <div class="modal-body clearfix">
                    <div class="form-group col-md-6">
                        <label>@T("Nome")</label>
                        <input type="text" class="form-control" value="@Model.Nome" disabled>
                    </div>
                    <div class="form-group col-md-6">
                        <label>@T("Senha Atual")</label>
                        <input type="password" name="Senha" id="Senha" class="form-control" value="" maxlength="50" placeholder="@T("Senha Atual")">
                    </div>
                    <div class="form-group col- md-6">
                        <label>@T("Nova Senha")</label>
                        <input type="password" name="NovaSenha" id="NovaSenha" class="form-control" value="" maxlength="50" placeholder="@T("Nova Senha")">
                    </div>

                    <div class="form-group col-md-6">
                        <label>@T("Confirmar nova senha")</label>
                        <input type="password" name="ConfirmarSenha" id="ConfirmarSenha" class="form-control" value="" maxlength="50" placeholder="@T("Confirmar Nova Senha")">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">@T("Fechar")</button>
                    <input type="button" value="@T("Salvar")" class="btn btn-info" onclick="salvarNovaSenha();">
                </div>
            </form>
        </div>
    </div>
</div>