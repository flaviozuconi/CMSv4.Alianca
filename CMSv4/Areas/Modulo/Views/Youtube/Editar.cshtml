@model MLModuloYoutubeEdicao 
@{
    Layout = "";
}


<div class="form-group col-md-24">
    <label>@T("Título")</label>
    <input type="text" class="form-control" maxlength="100" name="Titulo" placeholder="@T("Titulo")" value="@Model.Titulo" />
</div>
<div class="form-group col-md-24">
    <label>@T("Link")</label>
    <input type="text" class="form-control" maxlength="300" required="required" name="Link" placeholder="@T("Link")" value="@Model.Link" />
</div>
<div class="form-group col-md-12">
    <label>@T("Largura (px)")</label>
    <input type="text" class="form-control" maxlength="3" onkeypress="return somenteNumeros(event);" name="Largura" placeholder="@T("Largura")" value="@Model.Largura" />
</div>
<div class="form-group col-md-12">
    <label>@T("Altura (px)")</label>
    <input type="text" class="form-control" maxlength="3" onkeypress="return somenteNumeros(event);" name="Altura" placeholder="@T("Altura")" value="@Model.Altura" />
</div>


