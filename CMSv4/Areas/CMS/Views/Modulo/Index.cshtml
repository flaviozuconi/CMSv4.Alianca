@{
    var portal = PortalAtual.Obter;
    var urlEditar = string.Format("/cms/{0}/modulo/item", portal.Diretorio);
    var salvo = (bool?)TempData["Salvo"] ?? false;
}

<div class="portlet portlet-dark-blue">
    <div class="portlet-heading">
        <div class="portlet-title">
            <h4>
                <img src="~/iconpack.axd/16/application_view_tile" />
                @TAdm("Lista Config")</h4>
        </div>
        <div class="portlet-widgets">
            @if (AdminHelper.CheckPermission(Permissao.Modificar))
            { <a class="btn btn-green" href="@urlEditar">@TAdm("Adicionar")</a> }
            @Helpers.BotaoExcluir(T("Excluir"))
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="portlet-body col-lg-12">
        @if (salvo)
        {
            <div class="col-md-12">
                <div class="alert alert-success">
                    @TAdm("Registro salvo com sucesso!")
                </div>
            </div>
        }

        @Helpers.PainelExcluir(T("Atenção"), T("Você confirma a exclusão dos itens selecionados?"), Request.Url.AbsolutePath + "/excluir")

        <div class="table-responsive">
            <div id="toolbar"></div>
            <table id="lista" class="table table-striped table-bordered table-hover table-blue">
                <thead>
                    <tr>                 
                        <th>@TAdm("Nome")</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            window.parent.$("body, html").animate({ scrollTop: 0 }, 'slow');

            //DataTables Initialization
            $('#lista').dataTable(
                {
                    "ajax": "/cms/@portal.Diretorio/Modulo/Listar",
                    "order": [[0, "desc"]],
                    "columns": [
                        @Helpers.ColunaEditar("Nome", urlEditar, "Codigo")
                    ]
                }
            );
        });
    </script>
}
