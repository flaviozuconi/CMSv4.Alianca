@using VM2.Google.Analytics.Model;

@model List<MLAnalyticsGrafico>

<div class="table-responsive">
    <div id="toolbar"></div>

    @if (Model != null && Model.Count > 0)
    {
        <table id="tableCidades" class="table table-striped table-bordered table-hover table-blue" data-default-before-render="false">
            <thead>
                <tr>
                    <th>@TAdm("Cidades mais visitadas")</th>
                    <th style="width:100px;">@TAdm("Acessos")</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cidade in Model)
                {
                    <tr>
                        <td>@cidade.label</td>
                        <td>@String.Format("{0:N0}", Convert.ToDecimal(cidade.value))</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>